<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         syntaxCheck="false"
         bootstrap="./bootstrap.php"
        >
    <testsuites>
        <testsuite name="Api Bundle Tests">
            <directory>./src/App/ApiBundle/test</directory>
        </testsuite>
    </testsuites>

    <testsuites>
        <testsuite name="User Bundle Tests">
            <directory>./src/App/UserBundle/test</directory>
        </testsuite>
    </testsuites>

    <testsuites>
        <testsuite name="Template Engine Bundle Tests">
            <directory>./src/App/TemplateEngineBundle/test</directory>
        </testsuite>
    </testsuites>
    <testsuites>
        <testsuite name="DBManager Bundle Tests">
            <directory>./src/App/DBManagerBundle/test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src/</directory>
        </whitelist>
    </filter>
</phpunit>
